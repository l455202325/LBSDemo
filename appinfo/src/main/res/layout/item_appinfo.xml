<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:padding="5dp">

	<ImageView
		android:id="@+id/app_icom"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:scaleType="fitXY"
		android:src="@mipmap/ic_launcher"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="5dp"
		android:paddingRight="5dp">
		<TextView
			android:id="@+id/item_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="应用名称：appInfo"
			android:textSize="14sp"
			android:textColor="#333333"/>
		<TextView
			android:id="@+id/item_pkgname"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="应用包名：com.baidu.com"
			android:textSize="14sp"
			android:textColor="#333333"
			android:layout_marginTop="5dp"/>
		<TextView
			android:id="@+id/item_md5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="MD5：appInfo"
			android:textSize="10sp"
			android:layout_marginTop="5dp"
			android:textColor="#333333"/>
		<TextView
			android:id="@+id/item_sha1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="SHA1：appInfo"
			android:textSize="10sp"
			android:layout_marginTop="5dp"
			android:textColor="#333333"/>
		<TextView
			android:id="@+id/item_version"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="版本：appInfo"
			android:layout_marginTop="5dp"
			android:textSize="14sp"
			android:textColor="#333333"/>
		<TextView
			android:id="@+id/item_version_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="版本号：appInfo"
			android:layout_marginTop="5dp"
			android:textSize="14sp"
			android:textColor="#333333"/>
	</LinearLayout>

</LinearLayout>